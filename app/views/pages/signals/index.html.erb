<section class="signals-section featured-signals-section signals-section--dark">
  <div class="bs-container bs-container--default">
    <div class="row wide-gutter">
      <div class="col-sm-7 signals-section__col">
        <h1 class="signals-section__title featured-signals-section__title">Real time, professional trading signals for crypto</h1>

        <p class="signals-section__lead">
          Get alerts of buying and selling opportunities
        </p>
        <ul class="signal-highlight-list">
          <li class="signal-highlight-item">
            <span class="signal-highlight-item__label">Reliable</span>
            <span class="signal-highlight-item__separator">-</span>
            <span class="signal-highlight-item__description">thoroughly tested to help predict price movements</span>
          </li>
          <li class="signal-highlight-item">
            <span class="signal-highlight-item__label">Instant</span>
            <span class="signal-highlight-item__separator">-</span>
            <span class="signal-highlight-item__description">know before anyone else does</span>
          </li>
          <li class="signal-highlight-item">
            <span class="signal-highlight-item__label">Advanced</span>
            <span class="signal-highlight-item__separator">-</span>
            <span class="signal-highlight-item__description">developed by professional traders and data scientists</span>
          </li>
        </ul>

        <a class="btn btn-blue signals-section__cta-btn">Reserve My Spot</a>

        <p class="signals-section__cta-btn-note">Only 2,000 spots available <a href="">Why?</a>
      </div>
      <div class="col-sm-5 signals-section__col">
        <%= render "pages/signals/telegram_message", {
          title: "Sell signal: Whale moved $68m ETH to an exchange",
          message: "The #3 holder of Ethereum (ETH) moved 319k ETH ($68m) to Binance - 1 minute ago.",
        } %>

        <%= render "pages/signals/telegram_message", {
          title: "Buy signal: Whales of BNB increased their holdings ",
          message: "The top 5 holders of Binance (BNB) increased their holdings from 10% to 12% overall in the last 24 hours.",
        } %>

        <%= render "pages/signals/telegram_message", {
          title: "Buy signal: 5% of Augur supply withdrawn from Binance",
          message: "550,000 REP ($6.7M) USD moved out of Binance wallets in last 24 hours.",
        } %>
      </div>
    </div>
  </div>
</section>

<section class="signals-section">
  <div class="bs-container bs-container--default">
    <div class="row wide-gutter">
      <div class="col-sm-6 signals-section__col signals-section__col--vertical-center">
