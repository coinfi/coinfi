a#timeline[name="timeline"]
section.section
  .container
    header.section-header
      small Projected
      h2 Timeline
    .row.gap-y
      .col-12.col-md-5
        br
        ul.timeline
          li.event[data-date="Nov 1"] Whitepaper Release
          li.event[data-date="Nov 10"] Token Sale Registration Opens
          li.event[data-date="Jan 15"] Presale Begins
          li.event[data-date="Feb 8"] Crowdsale Begins
          li.event[data-date="Feb 22"] Token Sale Ends
          li.event[data-date="Feb 28"] Token Distribution
          li.event[data-date="Apr 6"] Public Beta Launch
      .col-12.col-md-7
        table.table
          tr
            th Total Token Supply
            td.text-right
              span.text-info.fs-40 ~300,000,000
          tr
            th Initial Offering Price<br><small>(Ethereum price adjusts based on volatility)</small>
            td.text-right
              .text-info.fs-40 1 <small class="text-info">ETH</small> = 7500 <small class="text-info">COFI</small>
          tr
            th Soft Cap On Raise
            td.text-right
              span.text-info.fs-40
                ' $3M
                small.text-info USD
          tr
            th Hard Cap On Raise
            td.text-right
              span.text-info.fs-40
                ' $15M
                small.text-info USD
          tr
            th Currencies Accepted
            td.text-right
              span.text-info.fs-40 Ethereum
          tr
            th Minimum Contribution<br>[Presale Only]<br><small>(Presale only, no minimum on crowdsale)</small>
            td.text-right
              span.text-info.fs-40 1 ETH
          tr
            th Maximum Contribution<br>[Crowdsale Only]<br><small>(Crowdsale only, no maximum on presale;<br>acts as whale protection mechanism)</small>
            td.text-right
              span.text-info.fs-40 25 ETH
