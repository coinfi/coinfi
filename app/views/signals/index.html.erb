          },
          html_options: {
            class: "signal-faqs-item",
          },
          prerender: true
        %>
        <%= react_component_with_jss "SignalFaqPanel",
          props: {
            question: "How should I use the signals?",
            answerHtml: <<~HTML
              <p class="signal-faqs-item__paragraph signal-faqs-item__paragraph--last">
