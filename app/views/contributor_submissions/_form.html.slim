= simple_form_for @contributor_submission do |f|
  = render partial: 'components/errors', locals: {model: @contributor_submission}
  .field
    = f.input :title
  .field
    = f.label :summary, title: 'Summarize your articleâ€™s key points in bullet points', class: 'has-tooltip' do
      ' Summary
      span.text-info
        i.fa.fa-info-circle
    = f.text_area :summary, class: 'form-control'
  .field
    = f.label :content, title: 'Please include links in parenthesis', class: 'has-tooltip' do
      ' Content
      span.text-info
        i.fa.fa-info-circle
    = f.text_area :content, class: 'form-control', rows: 20
  /= f.input :submission_category_id, collection: SubmissionCategory.order(:name), label: 'Category'
  .field
    = f.label :disclosure, title: 'Disclose any positions over $500 USD you hold in any cryptocurrencies mentioned', class: 'has-tooltip' do
      ' Disclosure
      span.text-info
        i.fa.fa-info-circle
    = f.text_area :disclosure, class: 'form-control'

  .actions = f.submit 'Submit Content', class: 'btn btn-blue'
