- if flash.any?
  .pt3.ph3.flex-none.flash-container
    - flash.each do |type, message|
      div class="flash flash-#{type}"
        - if message.kind_of?(Array)
          ul
            - message.each do |m|
              li= m
        - else
          = message
        span
          a onclick="$(this).parentsUntil('.flash-container', '.flash').remove(); if ($('.flash-container').children().length === 0){ $('.flash-container').remove(); }" X
